<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="rating">Rating</label>
        {{input value=rating id="rating" type="number" min=1 max=5}}
      </div>
      {{input value=id type="hidden" id="id"}}
      <div class="form-group">
        <label for="content">Content</label>
        {{textarea value=content id="content"}}
      </div>
      <button {{action 'saveComment' blog}}>Save</button>
    </form>
  </div>
