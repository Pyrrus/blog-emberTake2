<!-- Nested in admin.hbs -->

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>
        Headline
      </th>
      <th>
        Author
      </th>
      <th>
        Edit?
      </th>
      <th>
        Delete?
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each blog as |blog|}}
    <tr>
      <td class="col-xs-5">
        {{#link-to 'blog' blog.id}}{{blog.headline}}{{/link-to}}
      </td>
      <td>
        {{blog.author}}
      </td>
      <td class="col-xs-1">
        {{#link-to 'edit' blog.id}}<button class='btn btn-success btn-sm'><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>{{/link-to}}
      </td>
      <td class="col-xs-1">
        <button class="btn btn-danger btn-sm" {{action 'deleteBlog' blog}}><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
