{{#if addNewBlog}}
  <h1>New Blog</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{tinymce-editor options=options value=content}}
      </div>

      <button {{action 'saveBlog'}} class="btn btn-primary">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'blogFormShow'}} class="btn btn-lg btn-info">New Blog</button>
{{/if}}
