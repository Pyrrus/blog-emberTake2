<h1>Edit {{model.headline}}</h1>
<div>
  <form>
    <div class="form-group">
      <label for="headline">Headline</label>
      {{input value=model.headline id="headline"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=model.author id="author"}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{tinymce-editor options=options value=model.content}}
    </div>

    <button {{action 'update' model}}>Save</button>
  </form>
</div>
