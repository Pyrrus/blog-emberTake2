<div class="row">
    <div class="col-md-12">
      <h1>{{model.headline}}</h1>
      {{{model.content}}}
      <h5>{{model.author}}</h5>
    </div>
</div>

<div class="row">
  <h3>Comments</h3>
  {{#each model.comments as |comment|}}
    <div class="col-md-12 commentBox">
      {{comment.content}}<br>
      Author: {{comment.author}}
      <button {{action 'deleteComment' comment}}>Delete Comment</button>
    </div>
  {{/each}}
</div>
{{new-comment saveComment="saveComment" id=model.id blog=model}}
