<div class="row blog">
    <div class="col-md-12">
      <h1>{{model.headline}}</h1>
      {{{model.content}}}
      <h5>{{model.author}}</h5>
    </div>
</div>

<div id="comments" class="row text-center">
  <h3>Comments</h3>
  {{#each model.comments as |comment|}}
    <div class="col-md-11 commentBox">
      {{comment.content}}<br>
      Author: {{comment.author}}<br>
      <button {{action 'deleteComment' comment}} class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
    </div>
  {{/each}}
</div>
{{new-comment saveComment="saveComment" id=model.id blog=model}}
